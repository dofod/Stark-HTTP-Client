html
  head
    link(rel="stylesheet", href="../static/bootstrap/css/bootstrap.min.css")
    link(rel="stylesheet", href="../static/css/login.css")
    link(rel="stylesheet", href="../static/font-awesome/css/font-awesome.min.css")
    link(rel="stylesheet", href="../static/css/animate.css")
    script(src="../static/js/jquery-1.10.2.min.js")
    script(src="../static/bootstrap/js/bootstrap.min.js")
    script(src="../static/js/login.js")
    script(src="../static/js/noty/packaged/jquery.noty.packaged.min.js")
    script(src="../static/js/noty/themes/relax.js")
  title Login
  body
    div(class="container-fluid")
      div(class="span5")
        form(class="form-signin", id="form-signin" style="text-align:right")
          h2(class="form-signin-heading") Sign In
          input(type="text", id="form-signin-username", class="form-control", placeholder="Username")
          input(type="password", id="form-signin-password", class="form-control", placeholder="Password")
          br
          input(class="btn btn-lg btn-default", type="button", value="Sign In", onclick="login()")
      div(class="span5")
        form(class="form-register", id="form-register" style="text-align:left")
          h2(class="form-register-heading") Register
          input(type="text", id="form-register-email", class="form-control", placeholder="Email", required="")
          input(type="text", id="form-register-name", class="form-control", placeholder="Name", required="")
          input(type="text", id="form-register-username", class="form-control", placeholder="Username", required="")
          input(type="password", id="form-register-password", class="form-control", placeholder="Password", required="")
          br
          input(class="btn btn-lg btn-default", type="button", value="Register", onclick="register()")